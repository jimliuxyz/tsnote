<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- General theme colors -->
        <item name="colorPrimary">#266aa6</item>
        <item name="colorPrimaryDark">#002d8f</item>
        <item name="colorAccent">@color/nightColorAccent</item>
        <item name="colorControlNormal">@color/nightColorNormal</item>
        <!-- Text Appearance styles -->
        <item name="android:colorBackground">@color/nightBackground</item>
        <item name="android:colorForeground">@color/nightForeground</item>
        <item name="android:textColorLink">@color/nightTextColorLink</item>
        <item name="android:textColorLinkInverse">@color/nightTextColorLinkInverse</item>
        <!-- Custom attributes defined in attrs.xml -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorBgKeyText">#ffc800</item>
        <item name="colorBgSelText">#ff0004</item>
        <item name="colorTxtKeyNote">#878787</item>
        <item name="colorTxtSelNote">#0037ff</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- General theme colors -->
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="android:colorBackground">@color/lightBackground</item>
        <item name="android:colorForeground">@color/lightForeground</item>
        <!-- Text Appearance styles -->
        <item name="android:textColorPrimary">@color/lightTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/lightTextColorSecondary</item>
        <item name="android:textColorTertiary">@color/lightTextColorTertiary</item>
        <item name="android:textColorLink">@color/lightTextColorLink</item>
        <item name="android:textColorHint">@color/lightTextColorTertiary</item>
        <item name="android:textColorPrimaryInverse">@color/lightTextColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">@color/lightTextColorSecondaryInverse</item>
        <item name="android:textColorTertiaryInverse">@color/lightTextColorTertiaryInverse</item>
        <item name="android:textColorLinkInverse">@color/lightTextColorLinkInverse</item>
        <item name="android:textColorHintInverse">@color/lightTextColorTertiaryInverse</item>
        <!-- Custom attributes defined in attrs.xml -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorBgKeyText">#816814</item>
        <item name="colorBgSelText">#22bdff</item>
        <item name="colorTxtKeyNote">#979797</item>
        <item name="colorTxtSelNote">#27ff27</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
